<Window x:Class="Z.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
        xmlns:local="clr-namespace:Z"
        mc:Ignorable="d"        
        PreviewKeyDown="MainKeyDown" LostFocus="MainLostFocus" MouseDown="MainWindowMouseDown"
        Title="MainWindow" SizeToContent="Height" WindowStyle="None" ResizeMode="NoResize" Width="400"
        Visibility="Hidden" ShowInTaskbar="False" Topmost="True" AllowsTransparency="True"
        FocusManager.FocusedElement="{Binding ElementName=MainEdit}"
        Background="Transparent">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainWindowResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <controls:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush>
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0" Color="#c0c0c0" />
                    <GradientStop Offset="0.25" Color="#e0e0e0" />
                    <GradientStop Offset="0.75" Color="#e0e0e0" />
                    <GradientStop Offset="1" Color="#c0c0c0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Border.Background>

        <Border BorderBrush="#20ffffff" BorderThickness="1">
            <DockPanel Margin="10">
                <Border DockPanel.Dock="Left" Visibility="{Binding KeywordVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock VerticalAlignment="Center" Margin="4" Text="{Binding Keyword}" />
                </Border>
                <TextBox Style="{StaticResource MainEditStyle}" x:Name="MainEdit" Margin="3" Text="{Binding EnteredText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         PreviewKeyDown="MainEditKeyDown" />
            </DockPanel>
        </Border>
    </Border>
</Window>
